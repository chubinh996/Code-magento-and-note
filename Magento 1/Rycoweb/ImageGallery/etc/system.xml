<?xml version="1.0" encoding="utf-8"?>
<!-- Image Gallery Configuration: Image, template setting -->
<config>
    <sections>
        <imagegallery translate="label" module="imagegallery">
            <label>Image Gallery Configuration</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <!-- Gallery Setting -->
                <settings translate="label">
                    <label>Gallery Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <is_enable_gallery translate="label, comment">
                            <label>Enable Gallery</label>
                            <comment><![CDATA[Enable Gallery]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </is_enable_gallery>                        
                        <is_show_gallery_title translate="label, comment">
                            <label>Show Gallery Title</label>
                            <comment><![CDATA[Enable Photo Title]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </is_show_gallery_title>						                       
                    </fields>
                </settings>     
                <!-- END Gallery Setting -->

                <!-- Gallery Template Setting -->
                <imagegallery_template translate="label" module="imagegallery">
                    <label>Gallery Template Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>                        
                        <gallery_effect translate="label, comment">
                            <label>Gallery Effect</label>
                            <comment><![CDATA[NOTE: Auto Slide and Fadding/Faddout effect will be applicable for only Style 3]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>imagegallery/system_config_source_galleryeffectoptions</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </gallery_effect> 
                        <interval translate="label, comment">
                            <label>Time Interval</label>
                            <comment><![CDATA[NOTE: Time interval Between Two Images In Second]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </interval>
                    </fields>
                </imagegallery_template>
                <!-- END Gallery Template Setting -->
            </groups>
        </imagegallery>
    </sections>
</config>